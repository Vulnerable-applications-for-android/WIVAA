<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row7_1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat7_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/file" />

            <ImageView
                android:id="@+id/cat7_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/javascript" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row7_2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/row7_1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat7_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/cleartext" />

            <ImageView
                android:id="@+id/cat7_4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/ssl" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row7_3"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/row7_2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat7_cancel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/cancel"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>