<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <RelativeLayout
        android:id="@+id/alertContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row0_1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat0_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/adb" />

            <ImageView
                android:id="@+id/cat0_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/decompileandunzip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row0_2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/row0_1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat0_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/dex2jar" />

            <ImageView
                android:id="@+id/cat0_cancel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/cancel" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>