<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row2_1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat2_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/insecure_logging" />

            <ImageView
                android:id="@+id/cat2_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/shared_pref" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2_2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/row2_1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat2_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/txt" />

            <ImageView
                android:id="@+id/cat2_4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/tmp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2_3"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/row2_2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cat2_5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/db"/>

            <ImageView
                android:id="@+id/cat2_cancel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:src="@mipmap/cancel"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>