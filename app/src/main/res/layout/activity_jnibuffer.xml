<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".JniBufferActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/jnibuffer"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/linear_white"
        android:paddingLeft="30dp"
        android:paddingTop="0dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/jnibuffer_img"
            android:layout_width="381dp"
            android:layout_height="236dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="150dp"
            app:srcCompat="@mipmap/jni_img"/>

        <TextView
            android:id="@+id/jnibuffer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jnibuffer_img"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:fontFamily="@font/iransansbold"
            android:gravity="fill_horizontal|fill_vertical"
            android:text="@string/jniDesSec"
            android:textColor="@color/colorPrimaryDark"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/jnibuffercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jnibuffer_tv"
            android:layout_alignParentTop="true"
            android:layout_marginTop="390dp"
            android:fontFamily="@font/iransansbold"
            android:gravity="fill_horizontal|fill_vertical"
            android:text="@string/jnibufferDesInsec2"
            android:textColor="@color/colorAccent"
            android:background="@drawable/border_red"
            android:paddingStart = "10dp"
            android:paddingEnd   = "10dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:lineSpacingExtra="10dp"/>
        <EditText
            android:id="@+id/jnibuffer_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jnibuffer_tv"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:ems="10"
            android:fontFamily="@font/iransansregular"
            android:hint="@string/pass"
            android:inputType="text"
            android:textAlignment="textStart"
            android:background="@drawable/border_black"
            android:visibility="visible"/>

        <Button
            android:id="@+id/jnibuffer_access"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jnibuffer_edittext"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corners_red"
            android:fontFamily="@font/iransansbold"
            android:onClick="push"
            android:text="@string/access"
            android:textColor="@color/colorPrimary"
            android:visibility="visible"/>


    </RelativeLayout>

    <ToggleButton
        android:id="@+id/toggleButton_jnibuffer"
        android:layout_width="91dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70.5dp"
        android:background="@drawable/toggle_switch_red"
        android:textOff=""
        android:textOn=""/>

    <RelativeLayout
        android:id="@+id/jnibuffer_des"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/linear_red"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/icon_down"
            android:fontFamily="@font/iransansbold"
            android:gravity="center_horizontal"
            android:text="@string/des"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>