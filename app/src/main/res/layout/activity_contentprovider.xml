<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ContentProviderActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/contentprovider"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/linear_white"
        android:paddingLeft="30dp"
        android:paddingTop="0dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">
        <ImageView
            android:id="@+id/contentprovider_img1"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="150dp"
            app:srcCompat="@mipmap/contentprovider_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/contentprovidertv"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/contentproviderDesInsec1"
            android:layout_below="@+id/contentprovider_img1"
            android:fontFamily="@font/iransansregular"
            />
        <TextView
            android:id="@+id/contentprovidercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentprovidertv"
            android:layout_alignParentTop="true"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/iransansbold"
            android:gravity="fill_horizontal|fill_vertical"
            android:text="@string/contentproviderDesInsec2"
            android:textColor="@color/colorAccent"
            android:background="@drawable/border_red"
            android:paddingStart = "10dp"
            android:paddingEnd   = "10dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:lineSpacingExtra="10dp"/>
        <LinearLayout
            android:id="@+id/linear_contentprovider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/contentprovider_img1"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/contentprovider_btn1"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="-1dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/rounded_corners_red"
                android:fontFamily="@font/iransansbold"
                android:text="@string/contentproviderpass"
                android:textColor="@color/colorPrimary"
                android:onClick="addPass"
                android:visibility="visible"/>
            <EditText
                android:id="@+id/contentproviderpass"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:ems="10"
                android:maxLength="4"
                android:fontFamily="@font/iransansregular"
                android:hint="@string/pass4"
                android:inputType="text"
                android:textAlignment="textStart"
                android:layout_weight="0.55"
                android:background="@drawable/border_black"
                android:visibility="visible"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/contentprovider_btn2"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="goToNotes"
            android:layout_below="@+id/linear_contentprovider"
            android:background="@drawable/rounded_corners_red">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/icon_left"
                android:fontFamily="@font/iransansbold"
                android:gravity="center_horizontal"
                android:text="@string/contentprovideraccess"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <ToggleButton
        android:id="@+id/toggleButton_contentprovider"
        android:layout_width="91dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70.5dp"
        android:background="@drawable/toggle_switch_red"
        android:textOff=""
        android:textOn=""/>
    <RelativeLayout
        android:id="@+id/contentprovider_des"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/linear_red"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/icon_down"
            android:fontFamily="@font/iransansbold"
            android:gravity="center_horizontal"
            android:text="@string/des"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>